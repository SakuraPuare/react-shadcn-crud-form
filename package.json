    "dialog",
    "tailwindcss",
    "ui-components"
  ],
  "author": "SakuraPuare",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraPuare/react-shadcn-crud-form.git"
  },
  "bugs": {
